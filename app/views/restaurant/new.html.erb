<div class="sadrzaj" ng-controller="mainCtrl">
  <!--<h1>Places To Eat Main Page</h1>-->
  <div id="main">

<% provide(:title, "Unos restorana") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3" >
    <%= form_for(@restaurant, :format => :html, url: restaurantcreate_url, html: { method: :post }) do |f| %>

        <label for="restoraunt_name" translate>NAME</label>
        <%= f.text_field :name, class: 'form-control' %>


        <label for="restaurant_address" translate>ADDRESS</label>


        <%= f.text_field :address, class: 'form-control' %>

        <label for="restaurant_lon" translate>LONGITUDE</label>


        <%= f.number_field :lon,  in: 43..19.0, step: 0.0000001, class: 'form-control' %>

        <label for="restaurant_lat" translate>LATITUDE</label>


        <%= f.number_field :lat, in: 43..19.0, step: 0.0000001, class: 'form-control' %>

        <label for="restaurant_type" translate>TYPE</label>
        <%= f.select(:tip, options_for_select([['Restoran', 'R'], ['Museums', 'M'], ['Landmark', 'L'], ['Hotel', 'H'], ['Hostel', 'Hos']]), { :class => 'my_style_class' })%>
        <br/>

        <label for="restaurant_menu" translate>MENU</label>
        <%= f.file_field :menu %>

        <%= f.submit "{{ 'CREATE' | translate }}", style: 'margin-top:9px;', class: "btn btn-primary" %>

    <% end %>
</div>
  </div>
    </div>
</div>