<% provide(:title, 'Forgot password') %>
<h2><label for="Forgot password" translate>FORGOT_PASS</label></h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: pass_reset_path) do |f| %>
        <label for="session_email" translate>EMAIL</label>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.submit "{{ 'SUBMIT' | translate }}", style: 'margin-top:9px;', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>