<% provide(:title, 'Reset password') %>
<h1><label for="Reset password" translate>RESET_PASSWORD</label></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: pass_reset_edit_path) do |f| %>


        <label for="password" translate>PASSWORD</label>
        <%= f.password_field :password, class: 'form-control' %>

        <%=f.hidden_field :email,  :value => @user.email %>

        <%= f.label :password_confirmation, "{{ 'PASSWORD_CONFIRMATION' | translate }}" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.submit "{{ 'UPDATE_PASSWORD' | translate }}", style: 'margin-top:9px;', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>