<h1><%= @user.name %> 's Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, :format => :json, url: api_user_path(@user), html: { method: :patch }) do |f| %>
        <label for="name" translate>NAME</label>
        <%= f.text_field :name, class: 'form-control'%>

        <label for="lastname" translate>LAST_NAME</label>
        <%= f.text_field :lastname, class: 'form-control' %>

        <label for="email" translate>EMAIL</label>
        <%= f.email_field :email, class: 'form-control', disabled: true%>

        <label for="password" translate>PASSWORD</label>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "{{ 'PASSWORD_CONFIRMATION' | translate }}" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.label :last_sign_in_at%>
        <%= f.text_field :last_sign_in_at, class: 'form-control', disabled: true %>

        <%= f.submit "{{ 'UPDATE_MY_ACCOUNT' | translate }}", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>